{
    "name": "mariadb-connector-c",
    "buildsystem": "cmake",
    "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DINSTALL_BINDIR=bin",
        "-DINSTALL_LIBDIR=lib",
        "-DINSTALL_INCLUDEDIR=include",
        "-DINSTALL_PLUGINDIR=lib/mariadb/plugin",
        "-DINSTALL_PCDIR=lib/pkgconfig"
    ],
    "post-install": [
        "ln -s /app/bin/mariadb_config /app/bin/mysql_config",
        "ln -s /app/lib/libmariadb.so.3 /app/lib/libmysqlclient.so"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/mariadb-corporation/mariadb-connector-c/archive/refs/tags/v3.3.9.tar.gz",
            "sha256": "062b9ec5c26cbb236a78f0ba26981272053f59bdfc113040bab904a9da36d31f"
        }
    ],
    "modules": [
        {
            "name": "jemalloc",
            "cleanup": [
                "/bin/",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jemalloc/jemalloc/releases/download/5.3.0/jemalloc-5.3.0.tar.bz2",
                    "sha256": "2db82d1e7119df3e71b7640219b6dfe84789bc0537983c3b7ac4f7189aecfeaa"
                }
            ]
        },
        {
            "name": "libaio",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.de.debian.org/debian/pool/main/liba/libaio/libaio_0.3.113.orig.tar.gz",
                    "sha256": "2c44d1c5fd0d43752287c9ae1eb9c023f04ef848ea8d4aafa46e9aedb678200b"
                }
            ]
        }
    ]
}
